extend _template

append stylesheets
	link(rel="stylesheet", href="style.css")
	link(rel="stylesheet", href="/static/css/profile.sass.css")
	link(href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet")

block content
	#wrapper
		.ui.following.bar.fixed
			.ui.container
				.ui.secondary.mastmenu.menu
					.item 
						img(src="/static/images/wiki-v6.png", alt="WikiAcad logotipo")
					a.item Sobre
					a.item.periodical-trigger Revista
					a.item Videoteca 

		#content-wrapper
			.ui.container
				div#new-article
					div#editor
						string Texto muito legal
						p Lorem ipsum dolor sit amet consectetur adipisicing elit. Nesciunt, nulla iste ducimus rem hic aliquid eius a ex dolor incidunt corporis suscipit ipsa assumenda similique perferendis possimus quidem, impedit ullam!
block scripts
	script(src="//cdn.quilljs.com/1.3.6/quill.min.js")

	script.
		$(document).ready(() => {
			const $window = $(window)
			const $wrapper = $("#wrapper")
			const $menu = $(".following.bar")
			$window.scroll(function() {
				if($window.scrollTop() > 0) {
					$menu.addClass("lignt")
				} else {
					$menu.removeClass("lignt")
				}
			})

			new Quill('#editor', {
				theme: 'snow'
			})
		})